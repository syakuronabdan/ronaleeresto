  body.app.sidebar-fixed.aside-menu-fixed.aside-menu-hidden
    .app-body.mt-0
      .sidebar(style='height: calc(100vh)')
        nav.sidebar-nav
          ul.nav
            li.nav-item
              a.nav-link.nav-title(href= userRole === roleList.ADMIN ? '/admin' : '/')
                i.icon-home
                | Home
            if userRole === roleList.ADMIN
              li.nav-item
                a.nav-link.nav-title(href='/admin/users')
                  i.icon-user
                  | User
              li.nav-item
                a.nav-link.nav-title(href='/admin/menus')
                  i.icon-book-open
                  | Menu
              li.nav-item
                a.nav-link.nav-title(href='/admin/categories')
                  i.icon-drawer
                  | Category
            if userRole === roleList.WAITER || userRole === roleList.CASHIER
              li.nav-item
                a.nav-link.nav-title(href='/orders')
                  i.icon-book-open
                  | Order
              if userRole === roleList.CASHIER
                li.nav-item
                  a.nav-link.nav-title(href='/orders/pay')
                    i.icon-drawer
                    | Payment
            if userRole === roleList.COOK
              li.nav-item
                a.nav-link.nav-title(href='/orders/cook')
                  i.icon-book-open
                  | Orders

      main.main
        ol.breadcrumb
          li.breadcrumb-item
            button.navbar-toggler.sidebar-toggler.d-md-down-none.pt-0(type='button') &#9776;
            button.navbar-toggler.mobile-sidebar-toggler.d-lg-none.pt-0(type='button') &#9776;
          li.breadcrumb-menu
            .nav-item.dropdown.btn-group(role='group' aria-label='Button group')
              a.pt-3.btn.nav-link.dropdown-toggle(data-toggle='dropdown' role='button' aria-haspopup='true' aria-expanded='false' style='cursor: pointer;')
                span.mr-1= user.initial
              .dropdown-menu.dropdown-menu-right
                .dropdown-header.text-center
                  strong Account
                a.dropdown-item(href='/profile')
                  i.fa.fa-user
                  | Profile
                a.dropdown-item(href='/logout')
                  i.fa.fa-lock
                  | Logout
        .container-fluid
          #ui-view(style='opacity: 1;')
            .animated.fadeIn
              block content

    .app-footer.d-flex.align-items-end
      span
        | © 2018 Ronalee Resto
      a(href='https://ingkungasap.com/')

    script(src='/static/components/jquery.min.js')
    script(src='/static/components/popper.js')
    script(src='/static/components/bootstrap.min.js')
    script(src='/static/components/coreui.js')
