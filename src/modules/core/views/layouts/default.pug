  body.app.sidebar-fixed.aside-menu-fixed.aside-menu-hidden
    .app-body.mt-0
      .sidebar(style='height: calc(100vh)')
        nav.sidebar-nav
          ul.nav
            li.nav-item
              a.nav-link.nav-title(href='/')
                i.icon-home
                | Home
            - const viewMaster = userPermissions.some(perm => masters.includes(perm))
            if viewMaster
              li.nav-item.nav-dropdown
                a.nav-link.nav-title.nav-dropdown-toggle
                  i.icon-layers
                  | Master
                ul.nav-dropdown-items
                  if userPermissions.includes(permissions.COUNTRY_VIEW)
                    li.nav-item
                      a.nav-link(href='/countries')
                        | Countries
                  if userPermissions.includes(permissions.ROLE_CATEGORY_VIEW)
                    li.nav-item
                      a.nav-link(href='/role-categories')
                        | Role Categories
                  if userPermissions.includes(permissions.SECTOR_VIEW)
                    li.nav-item
                      a.nav-link(href='/sectors')
                        | Sectors
                  if userPermissions.includes(permissions.PRIORITY_VIEW)
                    li.nav-item
                      a.nav-link(href='/priorities')
                        | Priority
                  if userPermissions.includes(permissions.RATING_VIEW)
                    li.nav-item
                      a.nav-link(href='/ratings')
                        | Rating
                  if userPermissions.includes(permissions.CURRENCY_VIEW)
                    li.nav-item
                      a.nav-link(href='/currencies')
                        | Currency
                  if userPermissions.includes(permissions.PROGRESS_STATUS_VIEW)
                    li.nav-item
                      a.nav-link(href='/actions')
                        | Progress Status
                  if userPermissions.includes(permissions.FUNDRAISING_STAGE_VIEW)
                    li.nav-item
                      a.nav-link(href='/stages')
                        | Fundraise Stage
                  if userPermissions.includes(permissions.DEAL_STATUS_VIEW)
                    li.nav-item
                      a.nav-link(href='/pipeline-statuses')
                        | Deal Status
                  if userPermissions.includes(permissions.HIRING_STATUS_VIEW)
                    li.nav-item
                      a.nav-link(href='/hiring-statuses')
                        | Hiring Status
                  if userPermissions.includes(permissions.CANDIDATE_STATUS_VIEW)
                    li.nav-item
                      a.nav-link(href='/candidate-statuses')
                        | Candidate Status
            if userPermissions.includes(permissions.USER_VIEW)
              li.nav-item
                a.nav-link.nav-title(href='/users')
                  i.icon-user
                  | User
            if userPermissions.includes(permissions.ROLE_VIEW)
              li.nav-item
                a.nav-link.nav-title(href='/roles')
                  i.icon-lock
                  | Role
            if userPermissions.includes(permissions.COMPANY_VIEW)
              li.nav-item
                a.nav-link.nav-title(href='/companies')
                  i.icon-briefcase
                  | Company
            if userPermissions.includes(permissions.PEOPLE_VIEW)
              li.nav-item
                a.nav-link.nav-title(href='/people')
                  i.icon-people
                  | People
            if userPermissions.includes(permissions.DEAL_VIEW)
              li.nav-item
                a.nav-link.nav-title(href='/pipelines')
                  i.icon-chart
                  | Deal
            if userPermissions.includes(permissions.EVENT_VIEW)
              li.nav-item
                a.nav-link.nav-title(href='/events')
                  i.icon-calendar
                  | Event
            if userPermissions.includes(permissions.HIRING_VIEW)
              li.nav-item
                a.nav-link.nav-title(href='/hirings')
                  i.icon-globe-alt
                  | Hiring

      main.main
        ol.breadcrumb
          li.breadcrumb-item
            button.navbar-toggler.sidebar-toggler.d-md-down-none.pt-0(type='button') &#9776;
            button.navbar-toggler.mobile-sidebar-toggler.d-lg-none.pt-0(type='button') &#9776;
          li.breadcrumb-menu
            .nav-item.dropdown.btn-group(role='group' aria-label='Button group')
              a.pt-3.btn.nav-link.dropdown-toggle(data-toggle='dropdown' role='button' aria-haspopup='true' aria-expanded='false' style='cursor: pointer;')
                span.mr-1= user.initial
              .dropdown-menu.dropdown-menu-right
                .dropdown-header.text-center
                  strong Account
                a.dropdown-item(href='/profile')
                  i.fa.fa-user
                  | Profile
                a.dropdown-item(href='/logout')
                  i.fa.fa-lock
                  | Logout
        .container-fluid
          #ui-view(style='opacity: 1;')
            .animated.fadeIn
              block content

    .app-footer.d-flex.align-items-end
      span
        | © 2017 Dbase Alpha JWC  All Rights Reserved. Let's Scale Up Your Startup
      a(href='https://skyshi.com/').logo-bottom

